extends layout

block content
  h1 Edit business
  form(method="POST", action="/businesses/edit/" + business._id)
    .row
      .large-12.columns
        label
          | Business name
          input(type="text", name="name", placeholder="Business name" value=business.name)
        label
          | Category
          select(name='category')
            option(value='0') Select a Category
            option(value='Accounting') Accounting
            option(value='Construction') Construction
            option(value='Education') Education
            option(value='Food') Food
            option(value='Healthcare') Healthcare
            option(value='Real Estate') Real Estate
            option(value='Technology') Technology
            option(value='Other') Other
        label
          | Website
          input(type="text", name="website", placeholder="Business website" value=business.website)
        label
          | Phone Number
          input(type="text", name="phone", placeholder="Phone Number" value=business.phone)
        label
          | Street Address
          input(type="text", name="address", placeholder="Street Address" value=business.address)
        label
          | City
          input(type="text", name="city", placeholder="City" value=business.city)
        label
          | State
          input(type="text", name="state", placeholder="State" value=business.state)
        label
          | Zip Code
          input(type="text", name="zip", placeholder="Zip Code" value=business.zip)
        input.button(type="submit", value="Save")