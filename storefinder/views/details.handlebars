<script>
  function initMap() {
    const lat = {{store.lat }};
    const lng = {{store.lng }};
    const myLatLng = { lat: lat, lng: lng };

    const map = new google.maps.Map(document.getElementById('map'), {
      zoom: 10,
      center: myLatLng
    });

    const marker = new google.maps.Marker({
      position: myLatLng,
      map: map
    });
  }

</script>

<a href="/"><< Go Back</a>
<h1>Store Details [{{store.id}}]</h1>
<p>Address: {{store.address}}</p>
<form id="delete-form" method="POST" action="/store/delete/{{store.id}}?_method=DELETE">
  <input type="submit" value="Delete Store">
</form>
<div id="map"></div>

<script src="https://maps.googleapis.com/maps/api/js?keys=AIzaSyCx_NzSW94f4s0-llSrvgq7NXRpBPAgc_I&callback=initMap"></script>